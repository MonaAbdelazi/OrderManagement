@using NMS.Core.Resources
@model NMS.Data.Invoice_Items

@{
    ViewBag.Title = CommonRes.Create;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@CommonRes.Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
     <div class="row">
