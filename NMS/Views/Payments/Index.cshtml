
@using NMS.Core.Resources
@using NMS.Data
@using GridMvc.Html
@model IEnumerable<NMS.Data.Payment>

@{
    ViewBag.Title = CommonRes.Index;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@CommonRes.Index</h2>

<div style="text-align: right;">
     <form action="~/Payments/Create">
          <button type="submit" class="btn btn-default alignPreview">
               <span class="glyphicon glyphicon-new-window"></span>
               @CommonRes.Button_CreateNew
          </button>
     </form>
</div>




<br />
@Html.Grid(Model).Named("ordersGrid").Columns(columns =>
{
		columns.Add(model => model.PayID).Sortable(true).SetWidth(50).Titled(NMSRes.ID);
	
    	 
	
    	columns.Add(model => model.paiddate).Sortable(true).SetWidth(50).Titled(NMSRes.date);
	
    	 
	
    	columns.Add(model => model.Customer.Cus_Name_AR).Sortable(true).SetWidth(50).Titled(NMSRes.Cus_Name_AR);
	
    	columns.Add(model => model.Inst_ID).Sortable(true).SetWidth(50).Titled(NMSRes.Inst_ID);
	
    	columns.Add(model => model.comment).Sortable(true).SetWidth(50).Titled(NMSRes.Comment);
	
    	columns.Add(model => model.Status).Sortable(true).SetWidth(50).Titled(NMSRes.Status);
	
    	columns.Add(model => model.Last_Update).Sortable(true).SetWidth(50).Titled(NMSRes.LastUpdate);
	
    	columns.Add(model => model.Enterd_By).Sortable(true).SetWidth(50).Titled(NMSRes.Entered_By);
	
    	columns.Add(model => model.Warehouse_ID).Sortable(true).SetWidth(50).Titled(NMSRes.Warehouse_ID);
	
    	 
	
    	columns.Add(model => model.Installment.Comment).Sortable(true).SetWidth(50).Titled(NMSRes.Comment);
	
          columns.Add().Encoded(false).Sanitized(false).RenderValueAs(o => Html.ActionLink(CommonRes.Link_Edit, "Edit", new { id = o.PayID })).SetWidth(50);
                columns.Add().Encoded(false).Sanitized(false).RenderValueAs(o => Html.ActionLink(CommonRes.Link_Detail, "Details", new { id = o.PayID })).SetWidth(50);
                columns.Add().Encoded(false).Sanitized(false).RenderValueAs(o => Html.ActionLink(CommonRes.Link_Delete, "Delete", new { id = o.PayID })).SetWidth(50);
    
}).WithPaging(10).Filterable().SetLanguage(CommonRes.Lang)


