@using KOrders.Core.Resources
@model KOrders.Data.RequestOrder

@{
    ViewBag.Title = CommonRes.Delete;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@CommonRes.Details</h2>



<div class="form-horizontal">
    <h4>الطلب</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
           اسم صاحب الطلب
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RequesterName)
        </dd>

        <dt>
            Items
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RequestOrderItems.Count)
        </dd>



    </dl>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <input type="submit" value="Delete" class="btn btn-default" /> |
        @Html.ActionLink("Back to List", "Index")
    </div>
}